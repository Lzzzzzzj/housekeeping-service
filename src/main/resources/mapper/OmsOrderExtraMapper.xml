<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.back.mapper.OmsOrderExtraMapper">

    <resultMap id="BaseResultMap" type="com.example.back.entity.oms.OmsOrderExtra">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="title" property="title"/>
        <result column="amount" property="amount"/>
        <result column="pay_status" property="payStatus"/>
        <result column="evidence_pics" property="evidencePics"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO oms_order_extra (order_id, title, amount, pay_status, evidence_pics)
        VALUES (#{orderId}, #{title}, #{amount}, #{payStatus}, #{evidencePics})
    </insert>

    <select id="sumPaidAmountByOrderId" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(amount), 0)
        FROM oms_order_extra
        WHERE order_id = #{orderId}
          AND pay_status = 1
    </select>

</mapper>

