<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.back.mapper.SysAdminMapper">

    <resultMap id="BaseResultMap" type="com.example.back.entity.sys.SysAdmin">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="admin_type" property="adminType"/>
        <result column="balance" property="balance"/>
        <result column="created_by" property="createdBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_admin (user_id, admin_type, balance, created_by)
        VALUES (#{userId}, #{adminType}, #{balance}, #{createdBy})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT id, user_id, admin_type, balance, created_by, create_time, update_time
        FROM sys_admin
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT id, user_id, admin_type, balance, created_by, create_time, update_time
        FROM sys_admin
        WHERE user_id = #{userId}
    </select>
</mapper>

